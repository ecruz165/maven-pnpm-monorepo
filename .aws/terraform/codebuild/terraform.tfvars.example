# Example Terraform variables for CodeBuild project
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# Project Configuration
project_name    = "maven-pnpm-monorepo"
github_repo_url = "https://github.com/your-org/maven-pnpm-monorepo.git"

# GitHub Token (stored in Parameter Store)
github_token_parameter = "/codebuild/maven-pnpm-monorepo/github-token"

# Build Configuration
compute_type        = "BUILD_GENERAL1_MEDIUM"  # SMALL (3 vCPU, 3GB) | MEDIUM (7 vCPU, 15GB) | LARGE (15 vCPU, 30GB)
build_timeout       = 30                        # minutes
max_parallel_builds = "4"                       # concurrent Maven builds

# S3 Buckets (must be globally unique)
artifact_bucket_name = "your-org-maven-pnpm-monorepo-artifacts"
cache_bucket_name    = "your-org-maven-pnpm-monorepo-cache"
logs_bucket_name     = "your-org-maven-pnpm-monorepo-logs"

# Create S3 buckets (set to false if buckets already exist)
create_artifact_bucket = true
create_cache_bucket    = true
create_logs_bucket     = true

# Logging
log_retention_days = 30  # CloudWatch log retention

# Monitoring
enable_failure_alarm = true
# alarm_sns_topic_arn  = "arn:aws:sns:us-east-1:123456789012:codebuild-alerts"  # Optional: existing SNS topic

# Notifications (optional)
create_sns_topic   = false
notification_email = ""  # "devops@example.com"

# Additional Tags
tags = {
  Team        = "DevOps"
  CostCenter  = "Engineering"
  Application = "maven-pnpm-monorepo"
}
