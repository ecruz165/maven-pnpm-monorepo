{
  "name": "@libs/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Maven PNPM Monorepo - Hybrid workspace orchestration",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "build:parallel": "node scripts/src/parallel-build.cjs",
    "build:parallel:all": "node scripts/src/parallel-build.cjs --all",
    "build:changed": "node scripts/src/parallel-build.cjs",
    "test": "pnpm -r run test",
    "maven:sync": "pnpm -F @libs/scripts maven:sync",
    "maven:status": "pnpm -F @libs/scripts maven:status",
    "maven:init": "pnpm -F @libs/scripts maven:init",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "format": "pnpm -r run format",
    "lint": "pnpm -r run lint",
    "detect:changes": "node scripts/src/changed-modules.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.19.25",
    "tsx": "^4.8.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "monorepo",
    "maven",
    "pnpm",
    "workspace",
    "hybrid"
  ]
}
